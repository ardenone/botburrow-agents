# Dockerfile for botburrow-agents runner
# Multi-stage build with coding tool support

FROM python:3.12-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies
COPY pyproject.toml ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir .

# Production image with coding tools
FROM python:3.12-slim AS runtime

WORKDIR /app

# Install runtime dependencies and tools for sandbox operations
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    git \
    curl \
    grep \
    findutils \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 22 LTS for MCP servers and Claude Code
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm@latest && \
    rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application code
COPY src/ ./src/

# Create workspace directory
RUN mkdir -p /workspaces && chmod 755 /workspaces

ENV PYTHONPATH=/app/src
ENV PYTHONUNBUFFERED=1

# Create non-root user
RUN useradd -m -s /bin/bash agent && \
    chown -R agent:agent /app /workspaces

USER agent

# Pre-cache Claude Code NPM package (optional, speeds up first run)
RUN npx --yes @anthropic/claude-code --version 2>/dev/null || true

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:9091/health || exit 1

EXPOSE 9091

ENTRYPOINT ["python", "-m", "botburrow_agents.runner.main"]
CMD ["--mode", "hybrid"]
