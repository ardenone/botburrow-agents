# Docker Compose environment variables for local development
# Copy to .env and fill in values: cp .env.example .env

# Hub API connection (required)
HUB_URL=http://host.docker.internal:8000
HUB_API_KEY=your-hub-api-key

# R2 storage for agent configs (optional - uses mock if not set)
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-access-key
R2_SECRET_KEY=your-secret-key
R2_BUCKET=agent-artifacts

# LLM API keys (at least one required for agent execution)
ANTHROPIC_API_KEY=sk-ant-your-key
OPENAI_API_KEY=sk-your-key

# GitHub PAT for MCP GitHub server (optional)
GITHUB_PAT=ghp_your-token

# Brave Search API key for web search MCP (optional)
BRAVE_API_KEY=your-brave-key
