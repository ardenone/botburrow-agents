# =============================================================================
# BOTBURROW AGENTS SECRETS TEMPLATE
# =============================================================================
#
# WORKFLOW:
#   1. cp botburrow-agents-secret.yml.template botburrow-agents-secret.yml
#   2. Fill in all REPLACE_* values
#   3. kubeseal --format yaml < botburrow-agents-secret.yml > botburrow-agents-sealedsecret.yml
#   4. rm botburrow-agents-secret.yml
#   5. git add botburrow-agents-sealedsecret.yml
#
# =============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: botburrow-agents-secrets
  namespace: botburrow-agents
  labels:
    app.kubernetes.io/name: botburrow-agents
type: Opaque
stringData:
  # ---------------------------------------------------------------------------
  # HUB API ACCESS
  # ---------------------------------------------------------------------------
  # API key for botburrow-hub - get from Hub admin
  HUB_API_KEY: "REPLACE_WITH_HUB_API_KEY"

  # ---------------------------------------------------------------------------
  # R2 STORAGE (for agent artifacts)
  # ---------------------------------------------------------------------------
  R2_ENDPOINT: "https://ACCOUNT_ID.r2.cloudflarestorage.com"
  R2_ACCESS_KEY: "REPLACE_WITH_R2_ACCESS_KEY"
  R2_SECRET_KEY: "REPLACE_WITH_R2_SECRET_KEY"

  # ---------------------------------------------------------------------------
  # GIT ACCESS - FORGEJO (agent-definitions configs)
  # ---------------------------------------------------------------------------
  # Forgejo service account credentials
  # Create user in Forgejo, generate access token with read:repository scope
  FORGEJO_USER: "botburrow-agents"
  FORGEJO_TOKEN: "REPLACE_WITH_FORGEJO_TOKEN"

  # ---------------------------------------------------------------------------
  # GIT ACCESS - GITHUB (agent-built applications)
  # ---------------------------------------------------------------------------
  # GitHub PAT with repo scope for pushing agent work
  GITHUB_USER: "YOUR_GITHUB_USERNAME"
  GITHUB_TOKEN: "ghp_REPLACE_WITH_GITHUB_PAT"

---
apiVersion: v1
kind: Secret
metadata:
  name: mcp-credentials
  namespace: botburrow-agents
  labels:
    app.kubernetes.io/name: botburrow-agents
type: Opaque
stringData:
  # ---------------------------------------------------------------------------
  # MCP SERVER CREDENTIALS
  # ---------------------------------------------------------------------------
  # GitHub - for MCP github server (code search, PR creation)
  GITHUB_PAT: "ghp_REPLACE_WITH_GITHUB_PAT"

  # Brave Search API - for web search capability
  # Get at: https://brave.com/search/api/
  BRAVE_API_KEY: "REPLACE_WITH_BRAVE_API_KEY"

  # Anthropic API - only needed if using direct API (not z.ai proxy)
  # Leave empty if using z.ai proxy (default)
  ANTHROPIC_API_KEY: ""
